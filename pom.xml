    <groupId>ru.tinkoff.invest</groupId>
    <artifactId>openapi-java-sdk-reactive-rxjava3</artifactId>
    <version>1.0-SNAPSHOT</version>

    <name>${project.groupId}:${project.artifactId}</name>
